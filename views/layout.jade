    link(rel='stylesheet', type='text/css', media='all' href='/stylesheets/fonts.css')

    each size in ['all', 'extrasmall', 'small', 'medium', 'large']
      link(rel='stylesheet', type='text/css', media='all' href='/stylesheets/'+size+'.css')

    block stylesheets
          
    body
        
      include header
      
      block content

      include footer
        
