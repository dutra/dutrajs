doctype html
html
  head
    title= 'dutra.io | '+ title
    
    meta(name="viewport", content="width=device-width, initial-scale=1")

    each vendor_stylesheet in  ['bootstrap', 'bootstrap-theme', 'font-awesome.min', 'nanogallery_clean']
      link(rel='stylesheet', type='text/css', media='all' href='/stylesheets/vendor/'+ vendor_stylesheet + '.css')
      
    link(rel='stylesheet', type='text/css', media='all' href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600|Lato:100,300,400|Roboto:100,300,400')
    link(rel='stylesheet', type='text/css', media='all' href='/stylesheets/fonts.css')
    link(rel='stylesheet', type='text/css', media='all' href='/stylesheets/style.css')

    block stylesheets
          
    body
        
      include header
      block content

      include footer
        
    each vendor_script in ['jquery-2.1.1', 'bootstrap', 'imagesloaded.pkgd.min', 'jquery.nanogallery.min']
      script(type='text/javascript', src='/javascripts/vendor/'+vendor_script+'.js')

    block scripts