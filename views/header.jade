mixin navli(item, path)
  li
    a(href=path)
      if view == item
        span.nav-active
          block
      else
        block
      
.nav.navbar-default(role="navigation")
  .container

    .navbar-header
      a.navbar-brand(href="/") dutra.io

    .collapse.navbar-collapse.navbar-right
      ul.nav.navbar-nav
        +navli('index', '/') home
        +navli('about', '/about') about
        +navli('projects', '#') projects
        +navli('photos', '/photos') photos
        +navli('contact', '#') contact
      
