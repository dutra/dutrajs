
mixin navli(item, path)
  li
    a(href=path)
      if view == item
        span.nav-active
          block
      else
        block
      
.nav.navbar-default(role="navigation")
  .container

    
      
    a.navbar-brand(href="/") dutra
      span.red-dot .
      | io

    .navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        spain.icon-bar

    
    .collapse.navbar-collapse.navbar-right
      ul.nav.navbar-nav
        +navli('index', '/') home
        +navli('about', '/about') about
        +navli('projects', '#') projects
        +navli('photos', '/photos') photos
        +navli('travel', '/travel') travel
        +navli('contact', '#') contact
      
      